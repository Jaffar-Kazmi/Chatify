{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": false,
        "esModuleInterop": true,
        "typeRoots": ["src/@types", "./node_modules/@types"],
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/@types/**/*.d.ts"],
    "exclude": ["node_modules"]
}